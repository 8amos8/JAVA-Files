package heritageAndPolymorphism;

import heritageAndPolymorphism.entities.Account;
import heritageAndPolymorphism.entities.BussinessAccount;
import heritageAndPolymorphism.entities.SavingsAccount;

public class Program {

	public static void main(String[] args) {
		Account acc = new Account(1001, "Alex", 0.0);
		
		
		BussinessAccount bacc = new BussinessAccount(1002, "Maria", 0.0, 500.0);
		
		//UPCASTING -
		Account acc1 = bacc;
		Account acc2 = new BussinessAccount(1003, "Bob", 0.0, 200.0);
		Account acc3 = new SavingsAccount(1004, "Anna", 0.0, 0.01);
		
		
	}
}
